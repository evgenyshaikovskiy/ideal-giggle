<ViewComponent>:
    MDBottomAppBar:

        MDToolbar:
            title: "Action title"
            icon: "cigar"
            type: "bottom"
            on_action_button: root.open_dialog(window_type='input')

            right_action_items: [
                ["refresh", lambda x: root.refresh()],
                ["upload", lambda x: root.open_dialog(window_type='upload')],
                ["content-save-outline", lambda x: root.open_dialog(window_type='save')],
            ]

            left_action_items: [
                ['trash-can-outline', lambda x: root.open_dialog(window_type='delete')],
                ['filter-outline', lambda x: root.open_dialog(window_type='filter')],
            ]
